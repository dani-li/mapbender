<form>
    <div class="autocompleteWrapper">
        <div class="input-group" style="position: relative">
            <div class="input-group input-group-growing">
                <input type="text" class="form-control searchterm" style="padding-right: 25px;"
                       placeholder="{{ placeholder | trans }}"
                       minlength="2"
                       required="required"
                       aria-label="{{ 'mb.core.simplesearch.input.searchterm'|trans }}"/>
                <button class="-fn-reset button-close" type="reset"
                        aria-label="{{ 'mb.core.simplesearch.input.clear'|trans }}">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <div class="btn input-group-addon -fn-search" role="search"
                 title="{{ 'mb.core.simplesearch.input.search'|trans }}"
                 aria-label="{{ 'mb.core.simplesearch.input.search'|trans }}">
                <i class="fa fas fa-search"></i>
            </div>
        </div>
    </div>
</form>
